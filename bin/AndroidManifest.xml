<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wunderlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <receiver android:name="com.wunderlist.broadcast.ClockBroadCastReceiver">
            <intent-filter >
                <action android:name="com.wunderlist.clockremind"/>
            </intent-filter>
        </receiver>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.SlidingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.TaskDetailsActivity" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.NoteActivity" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.LoginActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.RegisterAndLoginActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.ReplyActivity" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.ReceiversActivity" >
        </activity>
         <activity
            android:name="com.wunderlist.slidingmenu.activity.AddReceiverActivity" >
        </activity>
        <activity
            android:name="com.wunderlist.slidingmenu.activity.ChooseBgActivity"
            android:theme="@style/Theme.Sherlock.NoActionBar" >
        </activity>
    </application>
    
</manifest>
