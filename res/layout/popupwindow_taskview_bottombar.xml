<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:layout_width="160dip"
	    android:layout_height="50dip"
	    android:id="@+id/taskview_bottombar_leftlayout"
	    android:background="@drawable/taskview_bottombar_selector" >
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/taskview_bottombar_share"
		    android:layout_centerInParent="true"
		    android:src="@drawable/wl_taskview_bottombar_share" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="160dip"
	    android:layout_height="50dip"
	    android:id="@+id/taskview_bottombar_rightlayout"
	    android:background="@drawable/taskview_bottombar_selector" >
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/taskview_bottombar_sort"
		    android:layout_centerInParent="true"
		    android:src="@drawable/wl_taskview_bottombar_sort" />
	</RelativeLayout>

    
</LinearLayout>
