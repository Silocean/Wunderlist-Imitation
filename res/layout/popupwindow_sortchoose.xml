<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/sortpopupview"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="140dip"
        android:layout_height="40dip"
        android:id="@+id/sort_subject"
        android:background="@drawable/row_bg_icon_selector" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:text="@string/popup_sortby_subject" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="140dip"
        android:layout_height="40dip"
        android:id="@+id/sort_enddate"
        android:background="@drawable/row_bg_icon_selector" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:text="@string/popup_sortby_enddate" />
    </RelativeLayout>

</LinearLayout>
