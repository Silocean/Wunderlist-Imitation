<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_bg_color" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/addreceiver_recenttext_layout"
        android:layout_alignParentTop="true" >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/activity_addreceiver_contract"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/addreceiverlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/addreceiver_recenttext_layout"
        android:listSelector="#00000000"
        android:fadingEdge="none"
        android:cacheColorHint="#00000000" />

</RelativeLayout>
