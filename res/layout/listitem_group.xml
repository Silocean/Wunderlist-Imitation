<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/group_item"
    android:background="@drawable/row_bg_icon_selector" >
    
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/groupitem_icon"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="5dip"
	    android:layout_centerVertical="true"
	    android:duplicateParentState="true"
	    android:src="@drawable/inbox_icon_selector" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupitem_name"
        android:layout_toRightOf="@id/groupitem_icon"
        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:duplicateParentState="true"
        android:textColor="@drawable/groupname_color_selector" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupitem_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:textColor="@drawable/groupname_color_selector" />
</RelativeLayout>