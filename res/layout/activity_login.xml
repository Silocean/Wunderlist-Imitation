<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wl_walkthrough_login_background" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_ribbon"
        android:contentDescription="@string/app_name"
        android:src="@drawable/wl_login_ribbon_new_lower_part"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
    <ImageView
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:id="@+id/login_paper_top"
        android:contentDescription="@string/app_name"
        android:layout_below="@id/login_ribbon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:background="@drawable/wl_login_paper_top" />
    
    <RelativeLayout 
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:id="@+id/login_paper_middle_up"
        android:layout_below="@id/login_paper_top"
        android:background="@drawable/wl_login_paper_middle"
        android:layout_centerHorizontal="true">
    	<ImageView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:id="@+id/login_email_icon"
    	    android:contentDescription="@string/app_name"
    	    android:src="@drawable/wl_login_email_glyph"
    	    android:layout_alignParentLeft="true"
    	    android:layout_marginLeft="15dip"
    	    android:layout_centerVertical="true"/>
    	<EditText 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="@string/email"
    	    android:textColor="@color/listitem_text_color"
    	    android:id="@+id/login_email_editText"
    	    android:inputType="textEmailAddress"
    	    android:layout_toRightOf="@id/login_email_icon"
    	    android:layout_marginLeft="5dip"
    	    android:layout_centerVertical="true"
    	    android:background="@null"/>
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:id="@+id/login_paper_middle_down"
        android:layout_below="@id/login_paper_middle_up"
        android:background="@drawable/wl_login_paper_middle"
        android:layout_centerHorizontal="true">
    	<ImageView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:id="@+id/login_password_icon"
    	    android:contentDescription="@string/app_name"
    	    android:src="@drawable/wl_login_password_glyph"
    	    android:layout_alignParentLeft="true"
    	    android:layout_marginLeft="15dip"
    	    android:layout_centerVertical="true"/>
    	<EditText 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="@string/password"
    	    android:textColor="@color/listitem_text_color"
    	    android:id="@+id/login_password_editText"
    	    android:inputType="textPassword"
    	    android:layout_toRightOf="@id/login_password_icon"
    	    android:layout_marginLeft="5dip"
    	    android:layout_centerVertical="true"
    	    android:background="@null"/>
    </RelativeLayout>
    
    <ImageView
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:id="@+id/login_paper_bottom"
        android:contentDescription="@string/app_name"
        android:layout_below="@id/login_paper_middle_down"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wl_login_paper_bottom" />
    
    <Button 
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:text="@string/login"
        android:textSize="16sp"
        android:textColor="@color/walkthrough_button_text_color"
        android:id="@+id/login_loginbutton"
        android:layout_below="@id/login_paper_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:background="@drawable/walkthrough_loginbutton_icon_selector" />

</RelativeLayout>
